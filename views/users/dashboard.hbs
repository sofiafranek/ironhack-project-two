      {{else}}
      <p>No todos created</p>
      {{/each}}
    </div> --}}

  </section>
  <aside class="aside">
    <h4 class="mt-3">General Settings</h4>
    <p>Username: {{user.name}}</p>
    <p>User Type: {{user.usertype}}</p>
    <p>Course: {{user.course}}</p>
    <p>Campus: {{user.campus}}</p>
    <p>Cohort: {{user.cohort}}</p>
    <p>Study Duration: {{user.studytime}}</p>
    <p>Email: {{user.email}}</p>
    <p class="pb-2">Contact Number: {{user.number}}</p>
    <a href="/users/dashboard/profile"><button>Edit Settings</button></a>
  </aside>
</main>


</div>