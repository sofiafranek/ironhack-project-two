<h2 class="mt-3">Hi {{user.name}} - this is your Dashboard</h2>
<h6>Find all your recent activity and general settings for your account</h6>
<small>Please make sure you fill out all your general settings</small>

<main class="d-flex row mb-5">
  <section class="feed pl-4">
    <div class="d-flex container row pt-3 justify-content-between">
    <div class="recentTodos card card-body col-md-5">
      <h4>Recent todos</h4>
      {{#each allTodos}}
        <a href="/todos/{{ todo }}/{{ _id }}">{{title}}</a>
      {{else}}
      <p>No todos created</p>
      {{/each}}
    </div>

    <div class="recentNotes card card-body col-md-5">
      <h4>Recent notes</h4>
      {{#each noNotes}}
        <p>You have no notes</p>
      {{/each}}
      {{#each allNotes}}
        <a href="/notes/{{ note }}/{{ _id }}">{{title}}</a>
      {{else}}
      <p>No notes created</p>
      {{/each}}
    </div>

