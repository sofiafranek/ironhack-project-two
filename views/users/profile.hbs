<h1>Edit Profile</h1>

<form method="POST">
  <div class="profile-div">
      <label for="input-name">Name</label>
      <input type="text" name="name" placeholder="Your Name" value="{{ user.name }}">
  </div>

  <div class="profile-div">
      <label for="input-name">Email</label>
      <input type="text" name="email" placeholder="Your Email" value="{{ user.email }}">
  </div>

  <div class="profile-div">
      <label for="usertype-select">Select a user type:</label>
      <select name="usertype" id="usertype-select">
          <option value="Undefined">--Please choose an option--</option>
          <option value="Student">Student</option>
          <option value="Teacher Assistant">Teacher Assistant</option>
          <option value="Teacher">Teacher</option>
      </select>
  </div>

  <button>Edit Profile</button>
</form>