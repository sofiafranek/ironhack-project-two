<div class="mt-3">
  <h3>Your feed</h3>
  <form action="/channel/search" method="post" class="searchbar mb-3 mt-3">
  <input type="text" name="search" placeholder="Search"/>
  <button>Search</button>
</form>
</div>

<main class="d-flex row mb-5">
  <section class="feed">
    {{#each posts}}
      {{>post}}
    {{/each}}
    {{#if searchNothing}}
      <p> There are no posts that match your search </p>
    {{/if}}
  </section>
  <aside class="aside">
    <h3>Popular Channels</h3>
    <ul>
      {{#each popularChannels}}
        <li><a href="/channel/{{ _id }}">{{ name }}</a></li>
      {{/each}}
    </ul>
    <a href="/channel/allchannels" class="btn mb-2 pl-0">
      <button>See all channels</button>
    </a>
  </aside>
</main>
