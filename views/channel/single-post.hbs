<div class="breadcrumb mb-5">
  <span><a href="/channel">Feed</a></span>
  <span>></span>
  <span><a href="/channel/{{post.channel._id}}">{{post.channel.name}}</a></span>
  <span>></span>
  <span>{{post.title}}</span>
</div>

<!-- Modal -->
<div class="modal fade" id="postModal-{{post.channel._id}}-{{post._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete Post</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this post?
      </div>
      <div class="modal-footer">
      <form method="post" action="/channel/{{post.channel._id}}/post/{{post._id}}/delete">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-block mb-2 modaldelete" value="Delete">
      </form>
      </div>
    </div>
  </div>
</div>

<article class="single-post">
  <h2 class="col-8">{{ post.title }}</h2>
  {{#if sameUser}}
  <a href="/channel/{{ post.channel._id }}/post/{{ post._id }}/edit" class="edit-button">
    <button>Edit Post</button>
  </a>
  <!-- Button trigger modal -->
  <button type="button" class="btn mb-2 post-delete" data-toggle="modal" data-target="#postModal-{{post.channel._id}}-{{post._id}}"> Delete Post </button>
  {{/if}}
  <span>
    Channel: <a href="/channel/{{ post.channel._id }}">{{ post.channel.name }}</a> <span class="space">|</span> Author: <span class="keep"> {{ post.author.name }} </span>
  </span>
  <p>{{ post.content }}</p>
</article>

<footer class="comment-form">
  <h5>Comments</h5> 
{{#each comments}}
    {{>comment}}
    {{else}}
    <p>There are no comments on this post</p>
  {{/each}}
  
  {{>commentform}}
</footer>