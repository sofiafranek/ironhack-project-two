<div class="breadcrumb mb-5">
  <span><a href="/notes">Notes</a></span>
  <span>></span>
  <span>{{note.title}}</span>
</div>
<div class="card card-body mb-5">
  <h4>{{note.title}}</h4>
  <p>Creation date: {{ date note.creationDate 'DD/MM/YYYY' }}</p>
  <p>{{note.details}}</p>
</div>
  <a class="btn btn-block mb-2" href="/notes/edit/{{note.id}}">Edit</a>
  <form method="post" action="/notes/{{note.id}}?_method=DELETE">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" class="btn btn-block mb-2 editDelete" value="Delete">
  </form>