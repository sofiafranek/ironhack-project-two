<div class="container flex">
{{#each todos}}
  <div class="card card-body mb-2 block">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <p>Due date: {{dueDate}}</p>
    <p>Creation date: {{creationDate}}</p>
    <a class="btn btn-block mb-2" href="/todos/edit/{{id}}">Edit</a>
    <form method="post" action="/todos/{{id}}?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" class="btn btn-block mb-2 delete" value="X">
    </form>
  </div>
{{else}}
  <p>No todos listed</p>
{{/each}}
</div>